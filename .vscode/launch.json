{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "php",
            "request": "launch",
            "hostname": "0.0.0.0",
            "port": 9003,
            "log": true,
            "stopOnEntry": false,
            "pathMappings": {
                "/var/www": "${workspaceFolder}"
            },
            "skipFiles": [
                "${workspaceFolder}/vendor/**/*.php"
            ],
            "ignore": ["${workspaceFolder}/vendor/**/*.php"],
            "xdebugSettings": {
                "max_children": 10000,
                "max_data": 10000,
                "show_hidden": 1
            }
        }

    ]
}